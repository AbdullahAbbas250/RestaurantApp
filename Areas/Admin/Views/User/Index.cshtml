@model IEnumerable<AppUser>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="WhiteBackGround">
    <div class="row">
        <div class="col-6">
            <h1 class="text-info">Users</h1>
        </div>
        <div class="col-6 text-right">
            <a class="btn btn-primary" asp-area="Identity" asp-page="/Account/Register">
                <i class="fas fa-plus"></i> &nbsp; New Employee Register
            </a>
        </div>
    </div>
    @if (Model.Count() == 0)
    {
        <p class="text-danger">No User ... </p>
    }
    else
    {
        <table class="table table-striped border">
            <tr class="table-secondary">
                <th>
                    @Html.DisplayNameFor(a => a.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(a => a.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(a => a.PhoneNumber)
                </th>
                <th>

                </th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(a => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(a => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(a => item.PhoneNumber)
                    </td>
                    <td>
                        @if (item.LockoutEnd == null || item.LockoutEnd < DateTime.Now)
                        {
                            <a class="btn btn-success" asp-action="LockUnLock" asp-route-id="@item.Id">
                                <i class="fas fa-lock-open"></i>
                            </a>
                        }
                        else
                        {
                            <a class="btn btn-danger" asp-action="LockUnLock" asp-route-id="@item.Id">
                                <i class="fas fa-lock"></i>
                            </a>  
                        }

                    </td>

                </tr>

            }
        </table>
    }
</div>

