@model IEnumerable<Coupon>
@{
    ViewData["Title"] = "IndexAsync";
}
<br/>
<h2>Coupons List </h2>
<br />
<div class="WhiteBackGround">

    <div class="row">
        <div class="col-6">
            <h1 class="text-info">Coupons</h1>
        </div>
        <div class="col-6 text-right">
            <partial name="_CreateButtonPartial" />
        </div>
    </div>
    @if (Model.Count() == 0)
    {
        <p class="text-danger">No Coupons ... </p>
    }
    else
    {
        <table class="table table-striped border">
            <tr class="table-secondary">
                <th>
                    @Html.DisplayNameFor(a => a.name);
                </th>
                <th>
                    @Html.DisplayNameFor(a => a.Discount);
                </th>
                <th>
                    @Html.DisplayNameFor(a => a.minAmount);
                </th>
                <th>
                    @Html.DisplayNameFor(a => a.IsActive);
                </th>
                <th>

                </th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(a => item.name)
                    </td>
                    <td>
                        @Html.DisplayFor(a => item.Discount)
                    </td>
                    <td>
                        @Html.DisplayFor(a => item.minAmount)
                    </td>
                    <td>
                        @Html.DisplayFor(a => item.IsActive)
                    </td>
                    <td style="width:150px">
                        <partial name="_OperationBasic" model="item.id" />
                    </td>
                </tr>
             }
        </table>
    }
</div>