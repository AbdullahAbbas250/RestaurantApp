@model Coupon
@{
    ViewData["Title"] = "Coupon";
}
<br />
<h2> Create Coupon </h2>
<br />
<form asp-action="Create" method="post">
    <div class="WhiteBackGround border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row form-group">
            <div class="col-2">
                <label asp-for="name" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="name" class="form-control" />
                <span class="text-danger" asp-validation-for="name"></span>
            </div>
        </div>
        <div class="row form-group">
            <div class="col-2">
                <label asp-for="CouponType" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <select asp-for="CouponType" asp-items="Html.GetEnumSelectList<Coupon.ECouponType>()" class="form-control" ></select>
            </div>
        </div>
        <div class="row form-group">
            <div class="col-2">
                <label asp-for="Discount" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="Discount" class="form-control" />
                <span class="text-danger" asp-validation-for="Discount"></span>
            </div>
        </div>
        <div class="row form-group">
            <div class="col-2">
                <label asp-for="minAmount" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="minAmount" class="form-control" />
                <span class="text-danger" asp-validation-for="minAmount"></span>
            </div>
        </div>
        <div class="row form-group">
            <div class="col-2">
                <label asp-for="IsActive" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input type="checkbox" asp-for="IsActive" class="form-control" />
                <span class="text-danger" asp-validation-for="IsActive"></span>
            </div>
        </div>
        <partial name="_CreateAndBackBtnPartial" />
    </div>
</form>
@* to validate on page level *@
@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
}

