@model IEnumerable<Category>
@{
    ViewData["Title"] = "IndexAsync";
}
<div class="WhiteBackGround">
    <div class="row">
        <div class="col-6">
            <h1 class="text-info">Categories</h1>
        </div>
        <div class="col-6 text-right">
            <partial name="_CreateButtonPartial" />
        </div>
    </div>
    @if(Model.Count() == 0)
    {
        <p class="text-danger">No Categories ... </p>
    }
    else
    {
        <table class="table table-striped border">
            <tr class="table-secondary">
                <th>
                    @Html.DisplayNameFor(a => a.name);
                </th>
                <th>

                </th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(a => item.name)
                    </td>
                    <td style="width:150px">
                       <partial name="_OperationBasic"  model="item.id" />
                    </td>

                </tr>

            }
        </table>  
    }
</div>
