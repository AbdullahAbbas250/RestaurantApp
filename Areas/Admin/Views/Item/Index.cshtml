@model IEnumerable<MenuItem>
@{
    ViewData["Title"] = "Index";
}
<div class="WhiteBackGround">
    <div class="row">
        <div class="col-6">
            <h1 class="text-info">items</h1>
        </div>
        <div class="col-6 text-right">
            <partial name="_CreateButtonPartial" />
        </div>
    </div>
    @if (Model.Count() == 0)
    {
        <p class="text-danger">No items ... </p>
    }
    else
    {
        <table class="table table-striped border">
            <tr class="table-secondary">
                <th>
                    @Html.DisplayNameFor(a => a.name)
                </th>
                <th>
                    @Html.DisplayNameFor(a => a.price)
                </th>
                <th>
                    @Html.DisplayNameFor(a => a.subCategory.category.name)
                </th>
                <th>
                    @Html.DisplayNameFor(a => a.subCategory.name)
                </th>
                <th>

                </th>
                <th>

                </th>
            </tr>
            @foreach (var item in Model)
            {
        <tr>
            <td>
                @Html.DisplayFor(a => item.name)
            </td>
            <td>
                @Html.DisplayFor(a => item.price)
            </td>
            <td>
                @Html.DisplayFor(a => item.subCategory.category.name)
            </td>
            <td>
                @Html.DisplayFor(a => item.subCategory.name)
            </td>
            <td>
                <img src="@item.image" width="50" />
            </td>
            <td style="width:150px">
                <partial name="_OperationBasic" model="item.id" />
            </td>

        </tr>

            }
        </table>
    }
</div>
